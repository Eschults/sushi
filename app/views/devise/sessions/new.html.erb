<%= content_for(:title) do %>
  HipCleaner - Connexion
<% end %>

<div class="col-md-4 col-md-offset-4">
  <h1 class="text-center">Connexion</h1>

  <br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :email, "Adresse e-mail" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, "Mot de passe" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de mes identifiants" %>
      </div>
    <% end -%>

    <div class="actions text-center form-group">
      <%= f.submit "Connexion", class: "form-control btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

<% content_for :js do %>
  <%= javascript_tag do %>
    $(document).ready(function() {

    })
  <% end %>
<% end %>