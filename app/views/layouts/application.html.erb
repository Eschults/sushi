<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "Hip Cleaner" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="<%= (yield(:description) || "").squish %>">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= yield(:stylesheets) %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
          <%= link_to new_order_path do %>
            <%= image_tag "logo.png", class: "logo" %>
          <% end %>
        </li>
        <li>
          <%= link_to new_order_path do %>
            <i class="fa fa-check"></i> Réserver un groom
          <% end %>
        </li>
        <li>
          <%= link_to "#" do %>
            <i class="fa fa-euro"></i> Tarifs
          <% end %>
        </li>
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <i class="fa fa-user"></i> Profil
          <% end %>
        </li>
        <li>
          <%= link_to orders_path do %>
            <i class="fa fa-euro"></i> Commandes
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path do %>
            <i class="fa fa-sign-out"></i> Déconnexion
          <% end %>
        </li>
      </ul>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="notices">
    <%= render "layouts/notices" %>
  </div>


<%= javascript_include_tag 'application' %>
<% javascript_tag do %>
  $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
<% end %>
<%= yield(:js) %>
</body>
</html>
