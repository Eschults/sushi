<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) || "HipCleaner" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="<%= (yield(:description) || "Votre service de pressing à domicile sans dépenser plus").squish %>">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= yield(:stylesheets) %>
  <%= favicon_link_tag %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/facebook' %>
  <%= render 'layouts/ga' %>

</head>
<body id="body">
  <div id="wrapper">
    <% if user_signed_in? %>
      <%= render "shared/sidenav" %>
      <%= render "shared/mobile_navbar" %>
    <% else %>
      <%= render "shared/welcome_sidenav" %>
      <%= render "shared/welcome_mobile_navbar" %>
    <% end %>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </div>



<%= javascript_include_tag 'application' %>
<% javascript_tag do %>
  $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
<% end %>
<%= yield(:js) %>
</body>
</html>
